#!/bin/bash

#$1 - имя архива
#$2 - Куда распаковывать, имя директории
#$3 - Что из архива распаковывать, wildcards имен файлов

	if [ ! -n "$3" ]
	then
	echo 'Usage: '`basename $0`' "Файл архива" "Директория куда распаковывать" "wildcards что распаковывать"'
	exit 1
	fi

NICE=16	#С каким приоритетом, м.б. очень долгим и затратным процессом, в зависимости от размера архива

nice -n $NICE \
	7za x -so $1 | \
		tar -xvp -C $2 $3
