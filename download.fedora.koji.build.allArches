#!/bin/bash

: ${1?"Not enough arguments: `basename $0` target-file"}

wget -q -O- "$1" \
	| grep buildArch \
	| sed -r "s@.*(taskinfo\?taskID=[0-9]+).*, (.*)\)</a>@\1 \2@" \
	| while read url arch; do
		echo "Process arch [$arch] ($url)"
		mkdir $arch
		pushd $arch
		download.fedora.koji.build "http://koji.fedoraproject.org/koji/$url"
		popd
	done

mv x86_64/*.src.rpm .
